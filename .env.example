# App
NODE_ENV=development
PORT=4000
APP_BASE_URL=http://localhost:5173

# Stellar / Soroban
HORIZON_URL=https://horizon-testnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# Contracts
NOVAGIFT_CONTRACT_ID=
KALE_CONTRACT_ID=

# Flags
ENABLE_REFLECTOR=true   # Enable Reflector oracle for price feeds
ENABLE_FAKE_MODE=false   # switch to false once Soroban wired
STELLAR_NETWORK=testnet # testnet or pubnet
ENABLE_PASSKEYS=false   # Enable Passkey smart-wallet support (beta)

# Reflector Network (for price feeds)
REFLECTOR_API_URL=https://api.reflector.testnet.example  # Reflector API base URL
# REFLECTOR_API_KEY=                                     # Optional: API key if required

# Security / Signing
LINK_SIGNING_KEY=       # Ed25519 secret (server-only, generates signed links)
FEE_SPONSOR_SECRET=     # S... testnet secret of fee sponsor account
FEE_SPONSOR_PUBLIC=     # G... public key of fee sponsor
WEB_AUTH_SERVER_SECRET= # S... server signer for SEP-10
WEB_AUTH_SERVER_PUBLIC= # G... auto-derived from above

# Database (default SQLite; switch to Postgres if needed)
DATABASE_URL="file:./novagift.db"
DIRECT_URL="file:./novagift.db"
# Example for Postgres (uncomment if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/novagift?schema=public
# DIRECT_URL=postgresql://user:password@localhost:5432/novagift?schema=public
POOLING=false

# Notifications (optional)
RESEND_API_KEY=
EMAIL_FROM="NovaGift <noreply@novagift.dev>"

# Claim Links
APP_URL=http://localhost:5173
API_URL=http://localhost:4000
CLAIM_SHORT_DOMAIN=https://ng.fyi

# KALE (token gate/test balance)
KALE_FAKE_BALANCE=false

# SEP-10 / Web Auth
WEB_AUTH_HOME_DOMAIN=novagift.local
WEB_AUTH_DOMAIN=auth.novagift.local

# Sessions
JWT_SECRET=change_me_now
JWT_EXPIRES_IN=900s   # 15 minutes

# API base for client
VITE_API_BASE=http://localhost:4000

# Passkey Support (optional - required when ENABLE_PASSKEYS=true)
# Reference: https://github.com/kalepail/passkey-kit
STELLAR_RPC_URL=https://soroban-testnet.stellar.org
PASSKEY_FACTORY_ID=    # Contract ID for passkey factory
MERCURY_URL=           # Mercury service URL for passkey operations
MERCURY_JWT=           # JWT for Mercury authentication
LAUNCHTUBE_URL=        # LaunchTube service URL
LAUNCHTUBE_JWT=        # JWT for LaunchTube authentication

# Client-side Passkey Config (Vite)
VITE_ENABLE_PASSKEYS=false
VITE_RPC_URL=https://soroban-testnet.stellar.org
VITE_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"
VITE_PASSKEY_FACTORY_ID=    # Same as PASSKEY_FACTORY_ID above