{
  "name": "novagift",
  "displayName": "NovaGift - Crypto Gifting Platform",
  "description": "A modern platform for sending cryptocurrency gifts through digital envelopes",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "author": "NovaGift Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DomNav/NovaGift"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:server": "vitest run --config vitest.config.server.ts",
    "typecheck": "tsc --noEmit",
    "server:dev": "tsx watch server/src/server.ts",
    "notify:dev": "tsx server/src/server.ts",
    "retention": "tsx server/src/jobs/retention.ts",
    "clean": "rm -rf dist node_modules .turbo",
    "clean:cache": "rm -rf node_modules/.vite node_modules/.cache",
    "smoke:wallet": "tsx server/tests/wallet.smoke.ts",
    "smoke:rates": "tsx server/tests/rates.smoke.ts",
    "smoke:endpoints": "npm run smoke:wallet && npm run smoke:rates"
  },
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^0.9.2",
    "@fontsource-variable/inter": "^5.1.0",
    "@fontsource/antonio": "^5.1.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.0.33",
    "@stellar/freighter-api": "^4.1.0",
    "@stellar/stellar-sdk": "^14.1.0",
    "@tanstack/react-query": "^5.85.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "better-sqlite3": "^12.2.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.540.0",
    "motion": "^12.23.12",
    "passkey-kit": "^0.3.0",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.15.4",
    "resend": "^4.0.1",
    "sonner": "^2.0.7",
    "soroban-client": "^1.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "axios": "^1.11.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  }
}
